        </section>

        <!-- FORM SECTION -->
        <section class="form-contact" id="form-contact">
            <div class="container form-wrapper">
                <div class="form-heading">
                    <p class="heading-title">Have a Question ?</p>
                </div>
                <form action="">
                <div class="input-area">
                    <div class="input-left">
                        <div class="field-input">
                            <label for="fullname">Full Name :</label>
                            <input type="text" id="fullname" name="inputText1">
                        </div>
                        <div class="field-input">
                            <label for="mail">Your Mail :</label>
                            <input type="text" id="mail" name="inputText1">
                        </div>
                        <div class="field-input">
                            <label for="subject">Subject :</label>
                            <input type="text" id="subject" name="inputText1">
                        </div>
                    </div>
                    <div class="input-right">
                        <div class="textarea-field">
                            <label for="inputTextarea">Pesan :</label>
                            <textarea id="inputTextarea" name="inputTextarea" rows="4" placeholder=""></textarea>
                        </div>
                        <div class="btn-submit">
                            <a href="#" class="btn-message"> Submit </a>
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </section>

